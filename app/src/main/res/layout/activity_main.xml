<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblTempoGasto"
        android:layout_width="106dp"
        android:layout_height="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/tempogasto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblVm"
        android:layout_width="126dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        android:text="@string/velocidademedia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTempoGasto" />

    <TextView
        android:id="@+id/lblRendimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/rendimento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblVm" />

    <TextView
        android:id="@+id/lblDistancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/distancia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular" />

    <TextView
        android:id="@+id/lblConsumo"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/consumo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDistancia" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="164dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onCalcular"
        android:text="@string/calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRendimento" />

    <EditText
        android:id="@+id/txtTempoGasto"
        android:layout_width="221dp"
        android:layout_height="41dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblTempoGasto"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtVm"
        android:layout_width="219dp"
        android:layout_height="39dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblVm"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtRendimento"
        android:layout_width="216dp"
        android:layout_height="42dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblRendimento"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lblDistancia2"
        android:layout_width="221dp"
        android:layout_height="26dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="__________________________"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblDistancia"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lblConsumo2"
        android:layout_width="217dp"
        android:layout_height="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="_____________________"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblConsumo"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>